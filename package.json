{
  "scope": "@hyperion",
  "name": "@hyperion/hyperion",
  "description": "Hyperion library to extend objects with 'aspects' automatically",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "_start": "tsdx watch",
    "_build": "tsdx build",
    "install-packages": "npm install --workspaces",
    "build": "tsc & npm run build --workspaces",
    "test": "npm test --workspaces",
    "_lint": "tsdx lint",
    "_prepare": "tsdx build",
    "_size": "size-limit",
    "_analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Mehrdad Reshadi",
  "module": "dist/.esm.js",
  "size-limit": [
    {
      "path": "dist/.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/.esm.js",
      "limit": "10 KB"
    }
  ],
  "workspaces": [
    "./packages/devtools",
    "./packages/global",
    "./packages/hook",
    "./packages/hyperion-core",
    "./packages/hyperion-dom"
  ],
  "dependencies": {
    "@hyperion/global": "*",
    "@hyperion/hook": "*",
    "@hyperion/hyperion-core": "*",
    "@hyperion/hyperion-dom": "*"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.12",
    "babel-jest": "^27.0.6",
    "jest": "^27.0.6",
    "tslib": "^2.3.0",
    "typescript": "^4.4.2"
  }
}
